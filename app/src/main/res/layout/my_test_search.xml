<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_vertical"
        android:background="@drawable/shape_btn_bg_white_rad30"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_12">
        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:src="@mipmap/ic_search"
            android:scaleType="centerInside"
            android:layout_marginStart="@dimen/dp_12"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="@dimen/dp_35"
            android:background="@color/white"
            android:hint="请输入订单编号"
            android:paddingLeft="@dimen/dp_8"
            android:textColorHint="@color/grayCFCFCF"
            android:textSize="@dimen/sp_13"
            android:layout_marginEnd="@dimen/dp_12"/>
        <Button
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:text="搜索"
            android:textColor="@color/main_color_00bbcc"
            android:textSize="@dimen/sp_10"
            android:background="@null"
            android:layout_marginEnd="@dimen/dp_12" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@color/white">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_30"
            android:text="CD202201100001"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_12"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/color_232323"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2022-01-10"
            android:layout_marginEnd="@dimen/dp_12"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

</LinearLayout>