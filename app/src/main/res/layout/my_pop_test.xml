<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/img_btn_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_not_network" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_btn_1"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="网络连接失败，请稍后再试！"
                android:textAlignment="center"
                android:textColor="@color/errorTipsColor"
                android:textDirection="inherit"
                android:textSize="@dimen/sp_15" />

            <Button
                android:layout_width="@dimen/dp_160"
                android:layout_height="@dimen/dp_60"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/main_color_00bbcc"
                android:text="点击重试"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/main_color_00bbcc"
            android:textStyle="bold"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>