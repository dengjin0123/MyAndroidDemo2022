<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试界面"
        android:onClick="jumpPage1"/>

    <Button
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_50"
        android:text="dialog1"
        android:onClick="clickDialog1"/>

    <Button
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_50"
        android:text="dialog2"
        android:onClick="clickDialog2"/>

    <Button
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_50"
        android:text="dialog3"
        android:onClick="clickDialog3"/>

    <Button
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_50"
        android:text="pop"/>

    <Button
        android:id="@+id/test_btn_pop"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_50"
        android:text="showPop"
        android:onClick="clickPop"/>
</LinearLayout>